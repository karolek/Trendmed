<script>
    $(document).ready(function() {
       $(".photo-small").mouseover(function() {
            var src = $(this).attr("src");
            var src =src.replace("small", "medium");

            $("#image-holder").removeClass('hidden').html('<img src=' + src + '>');
       });
       $(".photo-small").mouseout(function() {
           $("#image-holder").addClass('hidden');
       })
    });
</script>